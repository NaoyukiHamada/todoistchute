{
  "name": "TodoistChute",
  "description": "Todoistのタスクに設定した見積時間を集計して完了予定時刻を表示します。",
  "version": "1.0.3",
  "manifest_version": 2,
  "browser_action": {
        "default_icon": "img/icon.png"
  },
  "icons" : {
     "128": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.todoist.com/*"],
      "js": ["js/lib/jquery-3.3.1.min.js", "js/tc.js"],
      "css": ["css/tc.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "storage"
  ]
}
